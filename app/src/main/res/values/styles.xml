<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ExtendedFABTheme" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:background">@drawable/extended_fab_bg</item>
    </style>


    <style name="HeartRating" parent="@android:style/Widget.RatingBar">
        <item name="android:stepSize">1</item>
        <item name="android:numStars">10</item>
        <item name="android:progressDrawable">@drawable/heart_rating_bar</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">36dp</item>
    </style>

</resources>
